{
  "manifest_version": 3,
  "name": "+puntual",
  "version": "0.1.0",
  "description": "Gestor m√≠nimo de prompts: copia desde el popup e inserta con +codigo en inputs/textarea.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Delete"
      },
      "description": "Abrir +puntual"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}